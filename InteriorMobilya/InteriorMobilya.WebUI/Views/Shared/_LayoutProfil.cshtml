@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<html>
<head lang="en">
    <title>@ViewData["Title"] - Interior Mobilya</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" />
    <environment names="Development">
        <link rel="stylesheet" type="text/css" href="~/css/Site.css" media="all" />
        <script src="~/js/script.js"></script>
    </environment>
    
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Interior Mobilya</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a href="/">Anasayfa</a></li>
                    <li><a href="/urunler">Ürünler</a></li>
                </ul>
                @await Component.InvokeAsync("LoginStatus")
               @await Component.InvokeAsync("ShoppingCart");
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top:50px;" >
        <div class="row">
            <div class="col-sm-3" style="margin-top:20px;">
                <div class="list-group">
                    <a href="/hesabim" class="list-group-item active"><span class="glyphicon glyphicon-user"></span> Hesabım</a>
                    <a href="/adreslerim" class="list-group-item"><span class="glyphicon glyphicon-map-marker"></span> Adreslerim</a>
                    <a href="/siparislerim" class="list-group-item"><span class="glyphicon glyphicon-credit-card"></span> Siparişlerim</a>
                    <a href="/cikis" class="list-group-item"><span class="glyphicon glyphicon-menu-left"></span> Çıkış Yap</a>
                 
                </div>  
            </div>
            <div class="col-sm-9" id="content" >
                <div class="row">
                    <div class="col-sm-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="row">
            <div class="col-lg-12 text-center">
                <p>&copy Interior Mobilya @DateTime.Now.Year</p>
            </div>
        </div>

    </footer>
</body>
</html>
