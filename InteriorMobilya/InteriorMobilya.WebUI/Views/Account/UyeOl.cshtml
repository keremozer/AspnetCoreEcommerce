@* Async opretion *@
@using System.Threading.Tasks
@model InteriorMobilya.WebUI.Models.RegisterViewModel
@{
    ViewData["Title"] = "UyeOl";
    Layout = "~/Views/Shared/_LayoutHesap.cshtml";
}

<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-login " style="margin-top:100px;">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-6">
                    <a href="/giris" id="login-form-link">Giriş Yap</a>
                </div>
                <div class="col-xs-6">
                    <a href="/uyeol" class="active" id="register-form-link">Üye Ol<ol></ol></a>
                </div>
            </div>
            <hr>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12" style="padding:0 30px;">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="post" role="form" id="register-form">
                        
                        <div class="form-group">
                            <input asp-for="UserName"   class="form-control" placeholder="Kullanıcı Adınız">
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email"   id="email"  class="form-control"   placeholder="Eposta adresiniz"  >
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" id="password"   class="form-control" placeholder="Şifreniz"  >
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword"   id="confirm-password"   class="form-control" placeholder="Tekrar şifreniz"  >
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-3">
                                    <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Kayıt olun">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



