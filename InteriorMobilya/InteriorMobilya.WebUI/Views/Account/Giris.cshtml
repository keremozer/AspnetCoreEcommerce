@* Async opretion *@
@using System.Threading.Tasks
@model InteriorMobilya.WebUI.Models.LoginViewModel
@{
    ViewData["Title"] = "Giris";
    Layout = "~/Views/Shared/_LayoutHesap.cshtml";
}

<div class="col-md-6 col-md-offset-3" >
    <div class="panel panel-login" style="margin-top:100px;">
        <div class="panel-heading">
            <div class="row">                
                <div class="col-xs-6">
                    <a href="/giris" class="active" id="login-form-link">Giriş Yap</a>
                </div>
                <div class="col-xs-6">
                    <a href="/uyeol" id="register-form-link">Üye Ol<ol></ol></a>
                </div>
            </div>
            <hr>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12" style="padding:0 30px;">  
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   
                    
                    <div style="display:none"  id="login-alert" class="alert alert-danger col-sm-12"></div>
                        <form id="login-form"  method="post" role="form" style="display: block;">
                            <div class="form-group">
                                <input asp-for="Email" type="email"  data-msg-email="* Lütfen doğru şekilde giriniz!" placeholder="Eposta adresiniz"   class="form-control" >
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password"   class="form-control" placeholder="**********"   >
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-sm-offset-3">
                                        <input type="submit" name="login-submit" id="login-submit" class="form-control btn btn-register" value="Giriş Yap">
                                    </div>
                                </div>
                            </div>
                        </form>
                 
                </div>
            </div>
        </div>
    </div>
</div>



