@model InteriorMobilya.WebUI.Models.AccountDetailViewModel
@{
    ViewData["Title"] = "Hesabım";
    Layout = "~/Views/Shared/_LayoutProfil.cshtml";
}

<h2>Hesabım</h2>
<form   method="post">
    <div class="col-md-12">
        <div class="form-group">
            <label>Kullanıcı Ad</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="col-md-6">

        <div class="form-group">
            <label>Ad</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label>Soyad</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label>Doğum Tarih</label>
            <input asp-for="BirthDate" class="form-control" />
            <span asp-validation-for="BirthDate"></span>
        </div>
    </div>
    <div class="col-md-6">

        <div class="form-group">
            <label>Telefon</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group">
            <label>Cinsiyet</label>
            <select asp-for="Gender" asp-items="@(new SelectList(ViewBag.Gender,"Value","Text"))" class="form-control"></select>
               
        </div>
    </div>
    <div class="col-lg-2 col-lg-offset-10 text-center">
        <input type="submit" class="btn btn-primary " value="Bilgilerimi Güncelle" />
    </div>
</form>