@model InteriorMobilya.Model.ShoppingCart
@{
    ViewData["Title"] = "Sepetim";
    Layout = "~/Views/Shared/_LayoutHesap.cshtml";
}

<div class="col-lg-12 col-md-12" style="margin-top:70px">
    <div class="panel panel-default">
        <div class="panel-heading">Sepetim <span style="float:right"><a href="/urunler">Alışverişe Devam Et</a></span> </div>
      
        @if (Model.CartItems.Count > 0)
        {
            <div class="panel-body">
                <table class="table  table-responsive" id="Sepetim">
                    <thead>
                        <tr style="font-weight:bold">
                            <th>Ürün</th>
                            <th>Adet</th>
                            <th>Birim Fiyat</th>
                            <th>Toplam fiyat</th>
                            <th width="5%"></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>@item.Product.ProductName</td>
                                <td><input class="Quantity num" type="number" name="quantity" min="1" value="@item.Quantity" /> <input type="button" class="update2cart" data-id="@item.Product.ProductID" value="Güncelle" /> </td>
                                <td>@item.Product.UnitPrice ₺</td>
                                <td class="unitQuantity">@(item.Quantity * item.Product.UnitPrice) ₺</td>
                                <td><span class="glyphicon glyphicon-remove remove2cart" data-id="@item.Product.ProductID"></span></td>
                            </tr>
                        }
 
                    </tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th>Genel Toplam <span id="SepetFiyat">@Model.Total</span> ₺</th>
                            <th></th>
                        </tr>

                    </tfoot>

                </table>
            </div>
            <div class="panel-footer text-right"><a href="/odeme" class="btn btn-primary">Satın Al</a></div>
        }
        else
        {
            <div class="panel-body">
                <p>* Sepetinizde ürün bulunmamaktadır.</p>
            </div>

        }
    </div>
</div>
 